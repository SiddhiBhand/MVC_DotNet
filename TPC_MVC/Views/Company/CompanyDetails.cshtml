@model IEnumerable<TPC_MVC.Models.CompanyViewModel>

@{
    ViewData["Title"] = "CompanyDetails";
}

<h1>Training and Placement Cell</h1>
<h2>Upcoming Companies</h2>
<html>
<head>
    <style>
        .table{
            background-color: lightblue;
        }
    </style>
</head>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr style="background-color:black;color:white">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Criteria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisitingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Criteria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VisitingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Package)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Cid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Cid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Cid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
